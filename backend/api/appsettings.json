{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "layout": "${longdate} - ${uppercase:${level:format=FullName}}: ${message} ${exception}"
      },
      "file": {
        "type": "File",
        "fileName": "logs/${shortdate}.log",
        "layout": "${longdate} ${uppercase:${level}} ${message} ${exception}",
        "archiveEvery": "Day",
        "archiveNumbering": "Date",
        "maxArchiveFiles": 7,
        "keepFileOpen": false
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "console, file"
      }
    ]
  },
  "AllowedHosts": "*"
}
